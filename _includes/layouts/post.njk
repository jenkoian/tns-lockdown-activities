---
layout: layouts/base.njk
section: post
---

<article>
  <h1>{{ title }}</h1>
  <p>
    <small>
      <time datetime="{{ date | machineDate }}">{{ date | readableDate }}</time>
    </small>
  </p>

  {{ layoutContent | safe }}

</article>

{% if tags %}
    {% for tag in tags %}
        {% if tag != 'post' %}
            {% set tagUrl %}/{{ tag }}/{% endset %}

            <nav>
              <a href="{{ tagUrl }}">‚Üê Back</a>
            </nav>
        {% endif %}
    {% endfor %}
{% endif %}
