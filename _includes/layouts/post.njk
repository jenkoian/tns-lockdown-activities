---
layout: layouts/base.njk
section: post
---

<article>
  <h1>{{ title }}</h1>
  <p>
    <small>
      <time datetime="{{ date | machineDate }}">{{ date | readableDate }}</time>
    </small>
  </p>

  {{ layoutContent | safe }}

</article>

{% if tags %}
    {% for tag in tags %}
        {% set tagUrl %}/tags/{{ tags.first }}/{% endset %}
    {% endfor %}
    <nav>
      <a href="{{ tagUrl | url }}">← Back</a>
    </nav>
{% endif %}
